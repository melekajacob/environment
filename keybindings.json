// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusLeftGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusRightGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusAboveGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusBelowGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "command": "workbench.action.toggleSidebarVisibility",
        "key": "ctrl+e"
    },
    {
        "command": "workbench.files.action.focusFilesExplorer",
        "key": "ctrl+e",
        "when": "editorTextFocus"
    },
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "command": "renameFile",
        "key": "r",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "shift+n",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus"
    },
    {
        "command": "deleteFile",
        "key": "d",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "x",
        "command": "filesExplorer.cut",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
    },
    {
        "key": "y",
        "command": "filesExplorer.copy",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    {
        "key": "p",
        "command": "filesExplorer.paste",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceReadonly && !inputFocus"
    },
    {
        "key": "cmd+shift+a",
        "command": "git.stageSelectedRanges",
        "when": "isInDiffEditor && !operationInProgress"
    },
    {
        "key": "cmd+shift+d",
        "command": "git.unstageSelectedRanges",
        "when": "isInDiffEditor && !operationInProgress"
    },
    // Navigating search results
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
    // Code jumping
    {
        "key": "ctrl+o",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "ctrl+i",
        "command": "workbench.action.navigateForward"
    },
    // Terminal
    {
        "key": "ctrl+shift+n",
        "command": "workbench.action.terminal.new",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+v",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+j",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+l",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+h",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    // DEBUGGER
    // Debug: Start/Continue
    {
        "key": "ctrl+shift+c",
        "command": "workbench.action.debug.continue",
        "when": "debugState == 'stopped'"
    },
    {
        "key": "f5",
        "command": "workbench.action.debug.start",
        "when": "debugState == 'inactive'"
    },
    // Debug: Step Over (already F10, but can customize)
    {
        "key": "ctrl+shift+o",
        "command": "workbench.action.debug.stepOver",
        "when": "debugState == 'stopped'"
    },
    // Debug: Step Into (already F11, but can customize)
    {
        "key": "ctrl+shift+i",
        "command": "workbench.action.debug.stepInto",
        "when": "debugState == 'stopped'"
    },
    // Debug: Step Out (already Shift+F11, but can customize)
    {
        "key": "ctrl+shift+e",
        "command": "workbench.action.debug.stepOut",
        "when": "debugState == 'stopped'"
    },
    // Debug: Restart (Cmd+Shift+F5)
    {
        "key": "ctrl+shift+r",
        "command": "workbench.action.debug.restart",
        "when": "inDebugMode"
    },
    // Debug: Stop (Shift+F5)
    {
        "key": "ctrl+shift+s",
        "command": "workbench.action.debug.stop",
        "when": "inDebugMode"
    },
    // Debug: Toggle Breakpoint (F9 - already default)
    {
        "key": "ctrl+shift+b",
        "command": "editor.debug.action.toggleBreakpoint",
        "when": "editorTextFocus"
    },
    // Debug: Run to Cursor
    {
        "key": "cmd+f10",
        "command": "editor.debug.action.runToCursor",
        "when": "debugState == 'stopped'"
    },
    // Debug: Pause
    {
        "key": "ctrl+shift+p",
        "command": "workbench.action.debug.pause",
        "when": "debugState == 'running'"
    },
    // Debug: Focus on Debug Console
    {
        "key": "cmd+shift+y",
        "command": "workbench.debug.action.focusRepl",
        "when": "inDebugMode"
    },
    // Debug: Focus on Variables
    {
        "key": "cmd+shift+v",
        "command": "workbench.debug.action.focusVariablesView",
        "when": "inDebugMode"
    },
    // Debug: Focus on Call Stack
    {
        "key": "ctrl+shift+k",
        "command": "workbench.debug.action.focusCallStackView",
        "when": "inDebugMode"
    },
    // Debug: Focus on Watch
    {
        "key": "cmd+shift+w",
        "command": "workbench.debug.action.focusWatchView",
        "when": "inDebugMode"
    },
    // Debug: Add to Watch
    {
        "key": "cmd+shift+a",
        "command": "editor.debug.action.selectionToWatch",
        "when": "editorTextFocus && inDebugMode"
    },
    // Go: Debug Test at Cursor
    {
        "key": "ctrl+shift+d",
        "command": "go.debug.cursor",
        "when": "editorTextFocus"
    },
    // Go: Run Test at Cursor
    {
        "key": "ctrl+shift+r",
        "command": "go.test.cursor",
        "when": "editorTextFocus && editorLangId == 'go'"
    },
    {
        "key": "shift+enter",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\u001b\r"
        },
        "when": "terminalFocus"
    }
]
